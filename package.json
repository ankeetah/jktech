{
  "scripts": {
    "test": "npx playwright test",
    "test:ci": "npx playwright test --reporter=list,allure-playwright,html",
    "test:debug": "npx playwright test --debug",
    "test:headed": "npx playwright test --headed",
    "test:ui": "npx playwright test --ui",
    "test:chromium": "npx playwright test --project=chromium",
    "test:firefox": "npx playwright test --project=firefox",
    "test:webkit": "npx playwright test --project=webkit",
    "playwright:install": "npx playwright install --with-deps",
    "playwright:codegen": "npx playwright codegen",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results",
    "report:open": "npx playwright show-report",
    "lint": "echo 'Add your linter here (eslint, etc.)'",
    "format:check": "echo 'Add prettier or your formatter here'",
    "prepare": "npx playwright install"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "allure-playwright": "^2.9.2",
    "dotenv": "^16.3.1",
    "typescript": "^5.2.2"
  }
}